# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET         /                                controllers.ApplicationController.index
GET         /signOut                         controllers.ApplicationController.signOut
# GET         /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)

GET         /signUp                          controllers.SignUpController.view
POST        /signUp                          controllers.SignUpController.submit

GET         /signIn                          controllers.SignInController.view
POST        /signIn                          controllers.SignInController.submit
POST        /verification                    controllers.SignInController.verification

# GET         /password/forgot                 controllers.ForgotPasswordController.view
# POST        /password/forgot                 controllers.ForgotPasswordController.submit
# GET         /password/reset/:token           controllers.ResetPasswordController.view(token: java.util.UUID)
# POST        /password/reset/:token           controllers.ResetPasswordController.submit(token: java.util.UUID)
# GET         /password/change                 controllers.ChangePasswordController.view
# POST        /password/change                 controllers.ChangePasswordController.submit

# GET         /account/email/:email            controllers.ActivateAccountController.send(email: String)
GET         /account/activate/:token         controllers.ActivateAccountController.activate(token: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
->          /webjars                         webjars.Routes

GET /formpost/:hashed_form_id controllers.FormPostDataController.getPostData(hashed_form_id: String)

# form
GET /form/list net.macolabo.sform2.controllers.FormController.getList()
GET /form/:hashed_form_id net.macolabo.sform2.controllers.FormController.get(hashed_form_id: String)
POST /form net.macolabo.sform2.controllers.FormController.create()
DELETE /form/:form_id net.macolabo.sform2.controllers.FormController.delete(form_id: String)
POST /form/validate net.macolabo.sform2.controllers.FormController.validate()

# transfer
GET /transfer net.macolabo.sform2.controllers.TransferController.getTransferList()
GET /transfer/config/:transfer_name net.macolabo.sform2.controllers.TransferController.getConfig(transfer_name: String)
POST /transfer/config net.macolabo.sform2.controllers.TransferController.saveConfig()

# user
GET /user net.macolabo.sform2.controllers.UserController.getList()
GET /user/isadmin net.macolabo.sform2.controllers.UserController.isAdmin()

# transferTask
GET /transfertask/list/:form_id net.macolabo.sform2.controllers.TransferTaskController.getTransferTaskListByFormId(form_id: String)
GET /transfertask/:id net.macolabo.sform2.controllers.TransferTaskController.getTransferTask(id: Int)

# adminExistsCheck
GET /adminExistsCheck net.macolabo.sform2.controllers.AdminExistsCheckController.check()
